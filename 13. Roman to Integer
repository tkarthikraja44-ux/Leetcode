class Solution {
    public int romanToInt(String s) {
        char [] arr = s.toCharArray();
        int add = 0;
        for(int i=0; i<arr.length; i++) {
            if(arr[i] == 'I') {
                if(i+1 < arr.length && (arr[i+1] == 'V' || arr[i+1] == 'X'))
                    add -= 1;
                else
                    add += 1;
            }
            else if(arr[i] == 'V') {
                add += 5;
            }
            else if(arr[i] == 'X') {
                if(i+1 < arr.length && (arr[i+1] == 'L' || arr[i+1] == 'C'))
                    add -= 10;
                else
                    add += 10;
            }
            else if(arr[i] == 'L') {
                add += 50;
            }
            else if(arr[i] == 'C') {
                if(i+1 < arr.length && (arr[i+1] == 'D' || arr[i+1] == 'M'))
                    add -= 100;
                else
                    add += 100;
            }
            else if(arr[i] == 'D') {
                add += 500;
            }
            else if(arr[i] == 'M') {
                add += 1000;
            }
        }

        return add;
    }
}
